@model Patisserie.Models.Flavour

@{
    ViewData["Title"] = "Create";
}

<h1 class="create">Create a new flavour</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlavourImage" class="control-label"></label>
                <input asp-for="FlavourImage" class="form-control" />
                <span asp-validation-for="FlavourImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="add" />
            </div>
            <button class="add">
                <a asp-action="Index">Back to List</a>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
