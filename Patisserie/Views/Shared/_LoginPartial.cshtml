@using Microsoft.AspNetCore.Identity
@using Patisserie.Areas.Identity.Data
@inject SignInManager<PatisserieUser> SignInManager
@inject UserManager<PatisserieUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item loginEmail">
            <button class="nav-link btn btn-link text-dark border-0" style="width:auto; font-size:1em; float:right"><a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a></button>
    </li>
        <li class="nav-item logoutBtn">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="float:right;width:200px; font-size:1em; margin-top:5%" id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item loginRegister" >
            <button class="nav-link btn btn-link text-dark border-0" style="width:auto; font-size:1em; float:right"><a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></button>
    </li>
    <li class="nav-item loginRegister">
            <button class="nav-link btn btn-link text-dark border-0" style="width:auto; font-size:1em; float:right"><a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></button>
    </li>
}
</ul>
