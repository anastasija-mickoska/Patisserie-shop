@model Patisserie.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="delete">Delete Category</h1>

<div class="card mb-3" style="width:100%; height:40vh; margin-top:5%">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.CategoryImage)" class="img-fluid rounded-start" alt="@Html.DisplayFor(model => model.Name)" style="height: 96%; width: 100%;">
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title" style="margin-bottom:2%">
                    @Html.DisplayFor(model => model.Name)
                </h5>
                <p class="card-text">
                    @Html.DisplayFor(model => model.Description)
                </p>
                <p class="card-text" style="font-size:1.25em">Are you sure you want to delete this?</p>
                <div class="buttons">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoryId" />
                        <input type="submit" id="deleteBtn" value="Delete" class="add" style="font-family:Merienda" />
                        <button class="add">
                            <a asp-action="Index">Back to List</a>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
